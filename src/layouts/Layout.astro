---
import '../main.css'
import '../icons.css'
import {ViewTransitions} from 'astro:transitions';

interface Props {
	title: string;
	bodyClass: string;
}

const { title } = Astro.props;
let { bodyClass } = Astro.props;

if (bodyClass === undefined) {
	bodyClass = "bg-blue-600 justify-center min-w-[300px] sm:mx-[5%]";
}
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Welcome to my site" />
		<meta name="viewport" content="width=device-width" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<meta name="robots" content="index" />
		<link rel="icon" type="image/svg+xml" href="/logo.png" />
		<link rel="stylesheet" href="/font-awesome.css" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
		<!-- Open Graph -->
		<meta content="DemwE" property="og:title">
		<meta content="Welcome to my site" property="og:description">
		<meta content="Portfolio" property="og:site_name">
		<meta content="/logo.png" property="og:image"/>
	</head>
	<body class={bodyClass}>
		<slot />
	</body>
</html>
